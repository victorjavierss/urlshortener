{% extends "template.twig" %}

{% block bodyclass %}
    class="auth videos"
{% endblock %}


{% block content %}

    <div class="container">
    <div class="section">

        <div class="row">

     {% for video in videos %}
    <div class="col s12 m4">
        <div class="card vid-{{ video.id_video|e }}">
            <div class="card-image">
                <img src="{{ video.preview|e }}" />
                <span class="card-title text-shadow">{{ video.title|e }}</span>
            </div>
            <div class="card-content">
                <p><i class="material-icons small">perm_identity</i> <span class="counter">{{ video.votes|e }}</span></p>
                <div class="card-button" data-ec="{{ video.ec|e }}">
                    <i class="material-icons small play-vid" data-ec="{{ video.ec|e }}">play_circle_filled</i>
                    <i class="material-icons small vote-vid" data-vid="{{ video.id_video|e }}">thumb_up</i>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

    </div>
    </div>
      </div>
  </div>


  <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
      <a class="btn-floating btn-large red modal-trigger" href="#upload">
          <i class="material-icons">add</i>
      </a>
      <ul>
          <li><a class="btn-floating red" href="/oohack/disconnect"><i class="material-icons">input</i></a></li>
      </ul>
  </div>

    <div class="theater">
        <div class="theater-overlay">
            <div id='theaterplayer' class="player"></div>
            <div class="theater-closer"></div>
        </div>
    </div>

<div id="upload" class="modal modal-fixed-footer">
    <div class="modal-content">

    <h4>Upload your video</h4>

    <div class="form-file-upload">
      <form action="file_upload" class="file-upload" enctype="multipart/form-data" method="post">
      <input type="hidden" name="MAX_FILE_SIZE" value="524288000" />

        <div class="row">
          <div class="input-field col s12">
            <input id="input_vid_title" name="video_title" type="text" length="128" required />
            <label for="input_vid_title">Title</label>
          </div>
        </div>

        <div class="row">
          <div class=" col s12">
        <input type="file" id="video_file" name="video_file" />

          </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
      </form>
    </div>
        <div class="progress"><div class="indeterminate"></div></div>
  </div>

    </div>
  </div>

{% endblock %}


{% block customJS %}
    <script src='//player.ooyala.com/v3/a97f9a487d9c4c6c92009fe03b70322e?platform=html5-priority'></script>

    <script src='js/init.js'></script>
{% endblock %}